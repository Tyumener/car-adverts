# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.AdvertsController.get
GET     /:id                        controllers.AdvertsController.get(id: Int)
POST    /                           controllers.AdvertsController.add(advert: Advert)
PUT     /:id                        controllers.AdvertsController.edit(id: Int, advert: Advert)
DELETE  /:id                        controllers.AdvertsController.delete(id: Int)