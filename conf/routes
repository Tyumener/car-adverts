# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.CarsController.index
GET     /:id                        controllers.CarsController.get(id: Int)
POST    /                           controllers.CarsController.add(advert: Advert)
PUT     /:id                        controllers.CarsController.edit(id: Int, advert: Advert)
DELETE  /:id                        controllers.CarsController.delete(id: Int)